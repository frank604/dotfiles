! Urxvt
!URxvt.intensityStyles: false
URxvt.buffered: true
URxvt.cursorColor: #395573
URxvt.cursorUnderline: false
URxvt.cursorBlink: false
URxvt.geometry: 80x22
URxvt.transparent: 0
URxvt*urgentOnBell: true
URxvt.lineSpace: 0
URxvt.letterSpace: 0
URxvt*scrollBar_right: false
URxvt*scrollBar: false
URxvt*borderLess: false

! Font settings
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

! -- Fonts -- !
!URxvt.font:xft:droid sans mono:style=bold:pixelsize=13
!URxvt.boldFont:xft:droid sans mono:style=regular:pixelsize=13
!URxvt.italicFont:xft:droid sans mono:style=regular:pixelsize=13
!URxvt.boldItalicFont:xft:droid sans mono:style=regular:pixelsize=13
!URxvt*font:                 xft:Menlo for Powerline:regular:size=10
!URxvt*imFont:               xft:Menlo for Powerline:regular:size=10
!URxvt*boldFont:             xft:Menlo for Powerline:bold:size=10
!URxvt*italicFont:           xft:Menlo for Powerline:italic:size=10
!URxvt*boldItalicFont:       xft:Menlo for Powerline:bold:italic:size=10

!URxvt*font:xft:roboto mono:regular:size=10
!URxvt*boldFont:xft:roboto mono:regular:size=10
URxvt*font:xft:dejavu sans mono:medium:pixelsize=13, \
			xft:WenQuanYi Bitmap Song:size=8, \
            xft:FreeSerif:style=Regular, \
            xft:unifont:style=Medium:antialias=false, \
            xft:Serif:style=Regular, \
URxvt*boldFont:xft:dejavu sans mono:medium:pixelsize=13
URxvt*italicFont:xft:dejavu sans mono:medium:pixelsize=13
URxvt*bolditalicFont:xft:dejavu sans mono:medium:pixelsize=13
!URxvt*font:xft:droid sans mono slashed:pixelsize=18
!URxvt*boldFont:xft:droid sans mono slashed:pixelsize=18

! -- Colours -- !
!#include "/home/frank604/.colours/base16/base16-monokai.dark.256.xresources"
!#include "/home/frank604/.colours/monokai-dark"
#include "/home/frank604/.colours/sanctuary"

! --  Extensions -- !
URxvt.perl-ext-common: matcher,keyboard-select,url-select,clipboard
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-u:      perl:url-select:select_next
URxvt.keysym.M-s:      perl:keyboard-select:search
URxvt.keysym.M-c:      perl:clipboard:copy
URxvt.keysym.M-v:      perl:clipboard:paste
URxvt.keysym.M-C-v:    perl:clipboard:paste_escaped
URxvt.url-select.launcher: firefox
URxvt.matcher.rend.0:  -Uline fg16
URxvt.matcher.button:  1

